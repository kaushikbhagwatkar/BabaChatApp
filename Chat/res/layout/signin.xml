<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueish"
    android:orientation="vertical"
    android:padding="5dp" >
    
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
            
             >
        
    
     <TextView
         android:id="@+id/regtexts"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:paddingBottom="5dp"
         android:paddingLeft="30dp"
         android:paddingRight="30dp"
         android:paddingTop="0dp"
         android:text="Sign In User"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textStyle="bold" />
     
      <View
          android:layout_width="fill_parent"
          android:layout_height="2dp"
          android:layout_marginBottom="3dp"
          android:background="#c0c0c0" />
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nametexts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:" />

        <Spinner
            android:id="@+id/namespinner"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/rolltexts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No:" />

        <EditText
            android:id="@+id/rollnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Email"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <TextView
            android:id="@+id/passtexts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter password" />

        <EditText
            android:id="@+id/passs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Email"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

       
        <ImageView
            android:id="@+id/pics"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/newpic" />

      
    </LinearLayout>
    
     
    
    
    </LinearLayout>


    <Button
        android:id="@+id/signinbuttonk"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:text="Sign In"
        android:focusableInTouchMode="true"
        android:scaleType="centerInside" />

    
   
 </LinearLayout>
   </ScrollView>
</LinearLayout>

